---
import { Star } from 'lucide-astro';
import MaxWidthWrapper from './MaxWidthWrapper.astro';
---

<nav
    class="h-14 sticky inset-x-0 top-0 z-30 bg-background-900/50 border-b border-background-900 backdrop-blur-2xl transition-all"
>
    <MaxWidthWrapper>
        <div
            class="h-14 border-b border-b-accent-800 flex items-center justify-between"
        >
            <h1 class="text-2xl text-primary-500">Cogn'plexity</h1>
            <a
                href="https://github.com/akshat-OwO/cogn-plexity"
                target="_blank"
                class="group bg-gray-900 text-xs flex gap-5 items-center px-4 py-2 rounded-lg border border-gray-800"
            >
                <Star
                    class="h-4 w-4 group-hover:fill-yellow-600 group-hover:stroke-yellow-500 transition"
                />
                 Star this project
            </a>
        </div>
    </MaxWidthWrapper>
</nav>
